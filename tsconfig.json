{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "outDir": "dist",
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts", "src/server.ts", "src/*.json"
    ],
    "exclude": [
      "node_modules"
    ]
}